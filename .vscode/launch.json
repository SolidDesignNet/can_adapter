    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'logger'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=logger",
                    "--package=can_adapter"
                ],
                "filter": {
                    "name": "logger",
                    "kind": "bin"
                }
            },
            "args": ["--adapter","SIM", "--device", "1"],
            "cwd": "${workspaceFolder}"
        }
    ]
}